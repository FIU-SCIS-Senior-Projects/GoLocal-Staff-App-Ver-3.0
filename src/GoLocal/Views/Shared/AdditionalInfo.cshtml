            <div class="form-group">
                <label asp-for="DesiredHourlyRate" class="col-md-2 control-label">Desired Hourly Rate</label>
                <div class="col-md-10">
                    <input asp-for="DesiredHourlyRate" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="DesiredWeeklyRate" class="col-md-2 control-label">Desired Weekly Rate</label>
                <div class="col-md-10">
                    <input asp-for="DesiredWeeklyRate" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Travel" class="col-md-2 control-label">Availablility to Travel</label>
                <div class="col-md-10">
                    <input asp-for="Travel" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Insurance" class="col-md-2 control-label">Insurance</label>
                <div class="col-md-10">
