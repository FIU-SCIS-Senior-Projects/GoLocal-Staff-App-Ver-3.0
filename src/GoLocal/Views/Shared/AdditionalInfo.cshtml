                </div>
            </div>
            <div class="form-group">
                <label asp-for="Resume" class="col-md-2 control-label">Resume</label>
                <div class="col-md-10">
                    <textarea asp-for="Resume" col="40" rows="10" class="form-control" ></textarea>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10 ">
                    <button type="submit" class="btn-default">Submit</button>
                </div>
            </div>

        </form>
        @section scripts{
            <script>
                $(document).ready(function () {

                    $("#other").hide();

                    $("#type").on("change", function () {                        

                        var val = $(this).val();

                        if (val == "Other") {

                            $("#other").show();
                        }else
                        {
                            $("#other").hide();
                        }
     
                    });
                });
            </script>
        }

    </div>

